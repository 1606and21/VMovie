<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb000000"
    android:orientation="vertical"
    tools:context=".activity.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@mipmap/side_set"/>

        <TextView
            android:id="@+id/tv_login_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/btn_shenqingjiangshi"
            android:text="点击登录"
            android:textColor="#ffffffff"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/iv_massage_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@mipmap/side_message"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subscribe_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/side_subscribe"
            android:gravity="center"
            android:text="我的订阅"
            android:textColor="#ffededed"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#ffededed"/>

        <TextView
            android:id="@+id/tv_cache_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/side_cache"
            android:gravity="center"
            android:text="我的缓存"
            android:textColor="#ffededed"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#ffededed"/>

        <TextView
            android:id="@+id/tv_collect_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/video_lan_collect"
            android:gravity="center"
            android:text="我喜欢的"
            android:textColor="#ffededed"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb1_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/menu_home"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="    首页"
            android:textColor="@drawable/mencoloru_text"/>

        <RadioButton
            android:id="@+id/rb2_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/menu_series"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="    系列"
            android:textColor="@drawable/mencoloru_text"/>

        <RadioButton
            android:id="@+id/rb3_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/menu_behind"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="    幕后"
            android:textColor="@drawable/mencoloru_text"/>
    </RadioGroup>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="60dp"
        android:layout_marginTop="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/side_close"/>
</LinearLayout>
